<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tb.dobizapp.RegisterScreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register with doBizApp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fc0207"
        android:textStyle="bold"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/line1"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email Address"
        android:id="@+id/textView7"
        android:layout_above="@+id/txtconfirmemail"
        android:layout_toLeftOf="@+id/txtemail"
        android:layout_toStartOf="@+id/txtemail"
        android:layout_marginBottom="7dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtemail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtconfirmemail"
        android:layout_alignStart="@+id/txtconfirmemail"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Email"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/txtconfirmemail"
        android:layout_toLeftOf="@+id/txtconfirmemail"
        android:layout_toStartOf="@+id/txtconfirmemail"
        android:layout_marginBottom="7dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtconfirmemail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/txtpassword"
        android:layout_alignStart="@+id/txtpassword"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtpassword"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose a password"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/txtpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm password"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/txtconfirmpassword"
        android:layout_toLeftOf="@+id/txtconfirmpassword"
        android:layout_toStartOf="@+id/txtconfirmpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtconfirmpassword"
        android:layout_below="@+id/txtpassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Membership types"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:textColor="#fc0207" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView11"
        android:id="@+id/radioGroup"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_above="@+id/btnRegister">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bronze (free)"
        android:id="@+id/rbtnBronze"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silver ($10 p/m)"
        android:id="@+id/rbtnSilver"
        android:layout_below="@+id/rbtnBronze"
        android:layout_alignLeft="@+id/rbtnBronze"
        android:layout_alignStart="@+id/rbtnBronze"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gold ($20 p/m)"
        android:id="@+id/rbtnGold"
        android:layout_below="@+id/rbtnSilver"
        android:layout_alignLeft="@+id/rbtnSilver"
        android:layout_alignStart="@+id/rbtnSilver"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platinum ($50 p/m)"
        android:id="@+id/rbtnPlatinum"
        android:layout_below="@+id/rbtnGold"
        android:layout_alignLeft="@+id/rbtnGold"
        android:layout_alignStart="@+id/rbtnGold"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlimited ($200 p/m)"
        android:id="@+id/rbtnUnlimited"
        android:layout_below="@+id/rbtnPlatinum"
        android:layout_alignLeft="@+id/rbtnPlatinum"
        android:layout_alignStart="@+id/rbtnPlatinum"
        android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept terms?"
            android:id="@+id/cbxAccept"
            android:layout_below="@+id/rbtnUnlimited"
            android:layout_alignRight="@+id/rbtnPlatinum"
            android:layout_alignEnd="@+id/rbtnPlatinum"
            android:checked="false"
            android:textColor="#0b08bf" />
    </RadioGroup>

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Register"
        android:id="@+id/btnRegister"
        android:textColor="#fcf9f3"
        android:background="#fc0207"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtconfirmpassword"
        android:layout_toStartOf="@+id/txtconfirmpassword" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:textColor="#fcf9f3"
        android:background="#0c85b0"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />




</RelativeLayout>
