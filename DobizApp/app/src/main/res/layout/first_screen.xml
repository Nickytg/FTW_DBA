<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.tb.dobizapp.FirstScreen">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogo"
        android:src="@drawable/logo"
        android:layout_above="@+id/btnlogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnabout"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="About"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"

        android:layout_below="@+id/btnworkoffline"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Material.Light.Button.Small"

        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnworkoffline"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="Work Offline"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"

        android:layout_below="@+id/btnregistry"
        android:layout_alignLeft="@+id/btnregistry"
        android:layout_alignStart="@+id/btnregistry"
        style="@android:style/Widget.Material.Light.Button.Small" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnregistry"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="Registry"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"

        android:layout_below="@+id/btnlogin"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Material.Light.Button.Small" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnlogin"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="Log In"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnregistry"
        android:layout_alignStart="@+id/btnregistry"
        style="@android:style/Widget.Material.Light.Button.Small" />

</RelativeLayout>
