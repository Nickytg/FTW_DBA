<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tb.dobizapp.BusinessScreen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Business"
        android:id="@+id/textView2"
        android:textColor="#ff0a1a"
        android:textStyle="bold"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="17dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="My Businessses"
        android:id="@+id/btnmyBusinesses"
        style="@style/btnLargeBlue"
        android:textColor="#fdffff"
        android:textSize="17dp"
        android:layout_below="@+id/textView2"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="Arial"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="For Sale"
        android:id="@+id/btnForsale"
        android:layout_below="@+id/btnmyBusinesses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Wanted"
        android:layout_marginTop="15dp"
        android:id="@+id/btnWanted"
        android:layout_below="@+id/btnForsale"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Services Offered"
        android:layout_marginTop="15dp"
        android:id="@+id/btnServicesoffered"
        android:layout_below="@+id/btnWanted"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Quote Requests"
        android:layout_marginTop="15dp"
        android:id="@+id/btnQuote"
        android:layout_below="@+id/btnServicesoffered"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Current Specials"
        android:layout_marginTop="15dp"
        android:id="@+id/btnCurrentspecials"
        android:layout_below="@+id/btnQuote"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Sell My Bussiness"
        android:layout_marginTop="15dp"
        android:id="@+id/btnSellmybussiness"
        android:layout_below="@+id/btnCurrentspecials"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:text="Bussiness Search"
        android:layout_marginTop="15dp"
        android:id="@+id/btnBussinesssearch"
        android:layout_below="@+id/btnSellmybussiness"
        android:layout_centerHorizontal="true"
        style="@style/btnLargeBlue"
        android:textSize="17dp"
        android:fontFamily="Arial"
        android:textAllCaps="false"
        android:drawableRight="@drawable/next"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/line1"
        android:layout_above="@+id/btnmyBusinesses"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"/>

</RelativeLayout>
