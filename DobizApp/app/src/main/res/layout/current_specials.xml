<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tb.dobizapp.CurrentSpecials">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Specials"
        android:id="@+id/textView20"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff0a18"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/line1"
        android:layout_below="@+id/textView20"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Show"
        android:id="@+id/textView21"
        android:layout_above="@+id/imageView17"
        android:layout_toRightOf="@+id/textView20"
        android:layout_toEndOf="@+id/textView20" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spishow"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/imageView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Connection"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/spiconnection"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiconnection"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spishow"
        android:layout_alignLeft="@+id/spiindustry"
        android:layout_alignStart="@+id/spiindustry"
        android:layout_alignRight="@+id/spishow"
        android:layout_alignEnd="@+id/spishow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Industry"
        android:id="@+id/textView23"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_below="@+id/spiconnection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiindustry"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView23"
        android:layout_toRightOf="@+id/imageView17"
        android:layout_alignRight="@+id/spishow"
        android:layout_alignEnd="@+id/spishow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Services"
        android:id="@+id/textView24"
        android:layout_below="@+id/spiindustry"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spiservices"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spiindustry"
        android:layout_alignLeft="@+id/spiindustry"
        android:layout_alignStart="@+id/spiindustry"
        android:layout_alignRight="@+id/spiindustry"
        android:layout_alignEnd="@+id/spiindustry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Filter"
        android:id="@+id/btnFilter"
        android:layout_below="@+id/spiservices"
        android:layout_alignLeft="@+id/spiservices"
        android:layout_alignStart="@+id/spiservices"
        android:textAllCaps="false"
        android:background="@color/red"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>
