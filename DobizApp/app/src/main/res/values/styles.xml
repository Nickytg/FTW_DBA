<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>

    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>
	<style name="btnPrimary">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#253DF5</item>
        <item name="android:textStyle">normal</item>
        <item name="android:width">200dp</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="btnLargeBlue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#253DF5</item>
        <item name="android:textStyle">normal</item>
        <item name="android:width">350dp</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="btnSmall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#FF2525</item>
        <item name="android:textStyle">normal</item>
        <item name="android:width">120dp</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="btnSmallPositive">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#253DF5</item>
        <item name="android:width">120dp</item>
        <item name="android:height">30dp</item>
    </style>
    <style name="headerTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF2525</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="labelText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="rbRemember">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#808080</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
